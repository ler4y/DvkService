</head>
<body>
    <div id="site-content">
        <header class="site-header">
            <div class="container">
                <a id="branding" href="index.html">
                    <img src="~/Content/images/logo.png" alt="Company Logo" class="logo">
                    <h1 class="site-title">DVK<span>Service</span></h1>
                </a>
                <nav class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item @{ @Html.Raw(ViewBag.Title == "Home Page" ? "current-menu-item" : "");}">@Html.ActionLink("Главная", "Index")</li>
                        <li class="menu-item @{ @Html.Raw(ViewBag.Title == "About" ? "current-menu-item" : "");}">@Html.ActionLink("О нас", "About")</li>
                        <li class="menu-item @{ @Html.Raw(ViewBag.Title == "Services" ? "current-menu-item" : "");}">@Html.ActionLink("Услуги", "Services")</li>
                        <li class="menu-item @{ @Html.Raw(ViewBag.Title == "Gallery" ? "current-menu-item" : "");}">@Html.ActionLink("Галерея", "Gallery")</li>
                        <li class="menu-item @{ @Html.Raw(ViewBag.Title == "Contact" ? "current-menu-item" : "");}">@Html.ActionLink("Записаться", "Contact")</li>
                    </ul>
                </nav>
                <nav class="mobile-navigation"></nav>
            </div>
        </header>
        <div>
            @RenderBody()
            <footer class="site-footer">
                <div class="container">
                    <div class="subscribe-form">
                        <form action="#">
                            <input type="text" placeholder="Enter your email to subscribe...">
                            <button type="submit"><img src="~/Content/Images/icon-envelope-white.png" alt=""></button>
                        </form>
                    </div>
                    <div class="social-links">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                    </div>
                    <div class="copy">
                        <p>Copyright 2014 Company name. Designed by Themeezy. All rights reserved.</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyCVMKbrfj6sMbaSwkwyk4uyTTUZSFCayjM&sensor=false&amp;language=ru"></script>
    <script src="~/Scripts/plugins.js"></script>
    <script src="~/Scripts/app.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
